@page
@model Code_Test.Pages.witch_program
@{
    ViewData["Title"] = "WITCH PROGRAM";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/witch_program.css">
</head>
<body>
    <div class="container">
        <h1>@ViewData["Title"]</h1>
        <form id="killForm">
            <div class="input-group">
                <label for="ageOfDeathA">Age of Death for Person A:</label>
                <input type="number" id="ageOfDeathA" required>
            </div>
            <div class="input-group">
                <label for="yearOfDeathA">Year of Death for Person A:</label>
                <input type="number" id="yearOfDeathA" required>
            </div>
            <div class="input-group">
                <label for="ageOfDeathB">Age of Death for Person B:</label>
                <input type="number" id="ageOfDeathB" required>
            </div>
            <div class="input-group">
                <label for="yearOfDeathB">Year of Death for Person B:</label>
                <input type="number" id="yearOfDeathB" required>
            </div>
            <button type="button" id="btn_result">Calculate Average</button>
        </form>
        <div id="result">
            
        </div>
    </div>

    <script src="~/js/witch_program.js"></script>
</body>
</html>